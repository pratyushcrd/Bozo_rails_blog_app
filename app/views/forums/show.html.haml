%p#notice= notice

.row.medium-8.large-7.columns
  .blog-post
    %h3
      = @forum.title
      %small= @forum.created_at
    %p= @forum.post
    .callout
      %ul.menu
        %li
          = @forum.user.firstname + " " + @forum.user.lastname + " (" + @forum.category.name + ")"
        -if user_signed_in?
          -unless current_user.liked? @forum
            %li= link_to ' ', forum_like_path(@forum), method: :put, class: "fa fa-heart-o"
          -else
            %li= link_to ' ', forum_unlike_path(@forum), method: :put, class: "fa fa-heart"
        %li= @forum.votes_for.size
        -if user_signed_in?
          %li= link_to ' ', @forum, class: "fa fa-paper-plane"
          -if current_user.id == @forum.user.id
            %li= link_to ' ', edit_forum_path(@forum), class: "fa fa-edit"
            %li= link_to ' ', @forum, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "fa fa-scissors"
        -else
          %li
            %span.fa.fa-heart-o
.center
  = link_to 'Edit', edit_forum_path(@forum)
  |
  = link_to 'Back', @forums_path
